{
  "name": "kirby-locale",
  "version": "1.0.0",
  "description": "Locale utilities for Kirby CMS",
  "license": "MIT",
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "scripts": {
    "setup": "pnpm install && pnpm exec playwright install --with-deps",
    "update:dev": "pnpm update --dev --prod",
    "dev": "kirbyup serve src/index.js",
    "build": "kirbyup src/index.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "pnpm run lint:fix",
    "docs:lint": "markdownlint -c .markdownlint.json 'docs/**/*.md' 'README.md' 'CONTRIBUTING.md' 'SECURITY.md' 'AGENTS.md' 'STYLE_GUIDE.md'",
    "docs:check-next": "node ./tools/check-next.mjs",
    "docs:verify": "pnpm run docs:lint && pnpm run docs:check-next",
    "test:browser": "pnpm exec playwright test",
    "verify": "pnpm build && pnpm lint && pnpm test:browser",
    "generate:iso": "node scripts/generate-iso-data.mjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^9.39.3",
    "@formatjs/intl-displaynames": "^7.2.1",
    "@formatjs/intl-locale": "^5.2.1",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.3",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "kirbyup": "^3.4.1",
    "license-checker": "^25.0.1",
    "markdownlint-cli": "^0.47.0",
    "semantic-release": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
