{
    "name": "grommasdietz/kirby-locale",
    "description": "Locale utilities for Kirby CMS",
    "version": "1.0.0",
    "type": "kirby-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Grommas Dietz",
            "email": "info@grommas-dietz.com",
            "homepage": "https://grommas-dietz.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/grommasdietz/kirby-locale/issues",
        "source": "https://github.com/grommasdietz/kirby-locale"
    },
    "keywords": [
        "kirby",
        "kirby-cms",
        "kirby-plugin",
        "locale",
        "locales"
    ],
    "autoload": {
        "psr-4": {
            "GrommasDietz\\KirbyLocale\\": "lib/"
        }
    },
    "require": {
        "php": "^8.2",
        "getkirby/composer-installer": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "vimeo/psalm": "^6.15",
        "friendsofphp/php-cs-fixer": "^3.93"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2.27"
        },
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "scripts": {
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:coverage": "phpunit --coverage-text",
        "psalm": "./vendor/bin/psalm --no-cache --show-info=true",
        "lint": "php-cs-fixer fix --dry-run",
        "lint:fix": "php-cs-fixer fix",
        "format": "@lint:fix",
        "setup": [
            "composer install",
            "composer install -d playground"
        ],
        "verify": [
            "@lint",
            "@psalm",
            "@test"
        ],
        "package:clean": "composer archive --dir=dist --format=zip",
        "notices:generate": "php tools/generate-third-party-notices.php"
    },
    "archive": {
        "exclude": [
            "/.DS_Store",
            "/.editorconfig",
            "/.gitattributes",
            "/.github",
            "/.gitignore",
            "/.gitmessage",
            "/.husky",
            "/.markdownlint.json",
            "/.php-cs-fixer.cache",
            "/.php-cs-fixer.dist.php",
            "/.phpunit.cache",
            "/.prettierignore",
            "/.releaserc",
            "/.vscode",
            "/AGENTS.md",
            "/commitlint.config.cjs",
            "/composer.lock",
            "/CONTRIBUTING.md",
            "/dist",
            "/docs",
            "/eslint.config.cjs",
            "/node_modules",
            "/package.json",
            "/phpmd.xml.dist",
            "/phpunit.ci.xml",
            "/phpunit.dist.xml",
            "/playground",
            "/playwright.config.ts",
            "/pnpm-lock.yaml",
            "/pnpm-workspace.yaml",
            "/postcss.config.cjs",
            "/psalm.xml.dist",
            "/scripts",
            "/SECURITY.md",
            "/src",
            "/STYLE_GUIDE.md",
            "/test-results",
            "/tests",
            "/tools",
            "/vendor"
        ]
    }
}
